# include  < Servo.h >
# define  led   13  // 3.Pinde LED olduğunu tanımlıyoruz

Servo myservo;
void  setup () {

    pinMode (led, ÇIKIŞ); // LED'in çıkış elemanı olduğunu belirtiyoruz
    Seri. başlar ( 9600 ); // 9600 Baundluk bir seri haberleşme başlatyoruz
    myservo. takın ( 9 );
}

void  loop () {

  int isik = analogOkuma (A0); // Işık değişkenini A0 pinindeki LDR ile okuyoruz
  int zemin = analogOkuma (A1);
  Seri. println (zemin); // Okunan değeri seri iletişim ekranına yansıtıyoruz
 

  if (zemin> 500 ) {
  if (ışık> 480 ) {
    myservo. yazma ( 130 );
    digitalWrite ( 13 , YÜKSEK);
    gecikme ( 100 );
    myservo. yazma ( 90 );
    digitalWrite ( 13 , DÜŞÜK);
  }
  }
  başka {

   if (ışık < 480 ) {
    myservo. yazma ( 130 );
    digitalWrite ( 13 , YÜKSEK);
    gecikme ( 150 );
    myservo. yazma ( 90 );
    digitalWrite ( 13 , DÜŞÜK);

    
  }
}}              
